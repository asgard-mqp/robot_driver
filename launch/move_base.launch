<launch>
  <master auto="start"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
  	<param name="controller_frequency" value="8.0"/>
    <rosparam file="$(find robot_driver)/costmap-common-params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find robot_driver)/costmap-common-params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find robot_driver)/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find robot_driver)/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find robot_driver)/base_local_planner_params.yaml" command="load" />
  </node>
  <include file="$(find robot_driver)/driver.launch"/>

</launch>

